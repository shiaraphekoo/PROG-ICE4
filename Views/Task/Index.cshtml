@model IEnumerable<TaskManagementApp.Models.TaskModel>

<h2>Task List</h2>
<a asp-action="Create">Create New Task</a>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Deadline</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.Deadline.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@task.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@task.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
